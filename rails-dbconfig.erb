#!/usr/bin/env erb
#
# Generate MySQL permissions commands for a Rails project. Set the
# environment variable "PROJ" to name the project. For example:
#
#	PROJ=my_rails_proj rails-dbconfig.erb
#
<% proj = ENV["PROJ"] %>
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, INDEX, ALTER ON <%= proj %>_development.* TO '<%= proj %>_db'@'localhost' IDENTIFIED BY '<%= proj %>_pass';
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, INDEX, ALTER ON <%= proj %>_test.* TO '<%= proj %>_db'@'localhost' IDENTIFIED BY '<%= proj %>_pass';
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, INDEX, ALTER ON <%= proj %>_production.* TO '<%= proj %>_db'@'localhost' IDENTIFIED BY '<%= proj %>_pass';

